<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login | RS Mani Cafe</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background: linear-gradient(to bottom, #ffffff 50%, #f8b400 50%); /* Upper half white, lower half yellow */
            font-family: 'Poppins', sans-serif; /* Modern font */
            color: #4b2e20; /* Dark brown text color */
        }
        .login-container {
            background: linear-gradient(to bottom, #f8b400 50%, #ffffff 50%); /* Upper half yellow, lower half white */
            padding: 2.5rem;
            border-radius: 10px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 400px;
            color: #4b2e20; /* Dark brown text for contrast */
        }
        .login-container h2 {
            text-align: center;
            font-size: 1.8rem;
            margin-bottom: 1.5rem;
            color: black; /* Change title color to black */
        }
        .form-group {
            margin-bottom: 1rem; /* Space between the form groups */
        }
        .form-group label {
            font-size: 1rem;
            margin-bottom: 0.5rem;
            color: #4b2e20; /* Dark brown for labels */
        }
        .form-group input {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 1rem;
        }
        .email-group {
            margin-bottom: 2rem; /* Space between email and password sections */
        }
        .form-group button {
            width: 100%;
            padding: 0.75rem;
            background-color: #ff9000; /* Bold orange color */
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 1.1rem;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
        .form-group button:hover {
            background-color: #cc7400; /* Darker orange on hover */
        }
        .toggle-link {
            text-align: center;
            margin-top: 1rem;
            color: black; /* Change toggle link color to black if needed */
        }
        .toggle-link a {
            text-decoration: none;
            font-weight: bold;
            color: black; /* Change link color to black */
        }
        .toggle-link a:hover {
            text-decoration: underline;
        }
        .admin {
            border: 2px solid #d39400;
        }
        /* Remove specific admin header color */
        /* .admin h2 {
            color: #d39400; // This line is removed or commented out
        } */
    </style>
</head>
<body>
    <div class="login-container" id="loginContainer">
        <h2 id="loginTitle">User Login</h2>
        <form action="/auth/login" method="POST" id="loginForm">
            <div class="form-group email-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required>
            </div>
            <br><br>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required>
            </div>
            <div class="form-group">
                <button type="submit">Login</button>
            </div>
        </form>
        <div class="toggle-link">
            <a href="javascript:void(0);" onclick="toggleLogin()">Switch to Admin Login</a>
        </div>
    </div>

    <script>
        let isAdmin = false;
        function toggleLogin() {
            const loginContainer = document.getElementById('loginContainer');
            const loginTitle = document.getElementById('loginTitle');
            const loginForm = document.getElementById('loginForm');
            if (isAdmin) {
                loginTitle.textContent = "User Login";
                loginForm.action = "/auth/login";
                loginContainer.classList.remove('admin');
                document.querySelector('.toggle-link a').textContent = "Switch to Admin Login";
            } else {
                loginTitle.textContent = "Admin Login";
                loginForm.action = "/auth/login"; // Adjust if needed
                loginContainer.classList.add('admin');
                // Set the admin login title color to black
                loginTitle.style.color = "black"; // Ensure the admin title is also black
                document.querySelector('.toggle-link a').textContent = "Switch to User Login";
            }
            isAdmin = !isAdmin;
        }
    </script>
</body>
</html>
