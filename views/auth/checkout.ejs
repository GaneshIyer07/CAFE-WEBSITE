<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout | RS Mani Cafe</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f3f4f6;
        }
        .container {
            margin-top: 50px;
        }
    </style>
</head>
<body>

    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#">RS MANI CAFE</a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/dashboard/orders/menu">Menu</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <h1 class="text-center mb-4">Checkout</h1>

        <!-- Order Summary -->
        <h4>Your Order</h4>
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Item</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody id="order-summary">
                    <!-- Order items will be dynamically inserted here -->
                </tbody>
            </table>
        </div>

        <h4 class="text-end mt-4">Grand Total: ₹<span id="grand-total">0.00</span></h4>

        <!-- Address Form -->
        <h4 class="mt-4">Delivery Address</h4>
        <form id="address-form">
            <div class="mb-3">
                <label for="address" class="form-label">Enter your address</label>
                <textarea class="form-control" id="address" rows="3" required></textarea>
            </div>
            <button type="submit" class="btn btn-success">Place Order</button>
        </form>

        <!-- Order Confirmation -->
        <div id="order-confirmation" class="mt-4" style="display: none;">
            <h4>Order Confirmed!</h4>
            <p>Your Order Number is: <span id="order-number"></span></p>
            <p>Status: <span id="order-status">Processing</span></p>
        </div>
    </div>

    <script>
        // Function to display order items from session storage
        function displayOrderItems() {
            const cart = JSON.parse(sessionStorage.getItem('cart')) || [];
            const orderSummaryContainer = document.getElementById('order-summary');
            const grandTotalContainer = document.getElementById('grand-total');
            orderSummaryContainer.innerHTML = '';

            let grandTotal = 0;

            if (cart.length === 0) {
                orderSummaryContainer.innerHTML = '<tr><td colspan="4" class="text-center">No items in the cart.</td></tr>';
                grandTotalContainer.textContent = "0.00";
                return;
            }

            cart.forEach(item => {
                const itemTotal = (item.itemPrice * item.quantity).toFixed(2);
                grandTotal += parseFloat(itemTotal);

                const row = document.createElement('tr');
                row.innerHTML = `
                    <td><strong>${item.itemName}</strong></td>
                    <td>₹${item.itemPrice.toFixed(2)}</td>
                    <td>${item.quantity}</td>
                    <td>₹${itemTotal}</td>
                `;
                orderSummaryContainer.appendChild(row);
            });

            grandTotalContainer.textContent = grandTotal.toFixed(2);
        }

        // Function to handle order placement
        document.getElementById('address-form').addEventListener('submit', function (event) {
            event.preventDefault(); // Prevent the default form submission

            // Generate a random order number (for demo purposes)
            const orderNumber = Math.floor(100000 + Math.random() * 900000);
            document.getElementById('order-number').textContent = orderNumber;

            // Clear cart in session storage
            sessionStorage.removeItem('cart');

            // Show confirmation message
            document.getElementById('order-confirmation').style.display = 'block';
            this.reset(); // Reset the form
        });

        // Display order items on page load
        window.onload = displayOrderItems;
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
