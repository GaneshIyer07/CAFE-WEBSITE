<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <!-- Link to Bootstrap CSS for UI enhancements -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css"> <!-- Link to your custom CSS if needed -->
    <style>
        /* South Indian cafe-inspired colors and styles */
        body {
            background-color: #f5efe3; /* Light beige background */
            font-family: 'Verdana', sans-serif;
        }

        h1 {
            color: #4b5320; /* Earthy dark green for header */
            font-family: 'Georgia', serif; /* More traditional font style */
        }

        .btn-primary {
            background-color: #d88a0e; /* Orange color like South Indian spices */
            border: none;
        }

        .btn-primary:hover {
            background-color: #bf730d; /* Darker orange on hover */
        }

        .btn-danger {
            background-color: #e53e3e; /* Red for logout */
            border: none;
        }

        .btn-danger:hover {
            background-color: #c53030; /* Darker red on hover */
        }

        .card {
            border: 1px solid #ddd; /* Border around the menu item cards */
            background-color: #ffffff; /* White background for cards */
            border-radius: 8px;
        }

        .card-title {
            color: #4b5320; /* Same dark green for consistency */
            font-weight: bold;
        }

        .card-subtitle {
            color: #8b4513; /* Darker shade for the price */
        }

        .card-text {
            font-style: italic; /* Emphasize the description */
            color: #555;
        }

        .text-muted {
            color: #8b4513; /* Category text in similar tone */
        }

        /* South Indian pattern style for button section */
        .button-container {
            background-color: #e3d2b4; /* Lighter background with warmer tones */
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
        }

        /* Responsive styling for smaller screens */
        @media (max-width: 768px) {
            .button-container {
                flex-direction: column;
                align-items: center;
            }

            .row .col-md-4 {
                margin-bottom: 20px;
            }
        }

        /* Custom footer */
        footer {
            margin-top: 2rem;
            background-color: #d88a0e;
            color: white;
            padding: 10px 0;
            text-align: center;
            border-top: 2px solid #bf730d;
        }
    </style>
</head>
<body>
    <div class="container my-5">
        <h1 class="mb-4 text-center">Admin Dashboard - Menu Items</h1>

        <!-- Centered Buttons for Add New Menu, View User Checkouts, and Logout -->
        <div class="d-flex justify-content-center button-container mb-4">
            <a href="/admin/dashboard/add" class="btn btn-primary mx-2">Add New Menu Item</a>
            <a href="/admin/dashboard/checkouts" class="btn btn-primary mx-2">View User Checkouts</a> <!-- New button to view user checkouts -->
            <a href="/auth/logout" class="btn btn-danger mx-2">Logout</a>
        </div>

        <!-- Menu Items Card Layout -->
        <div class="row">
            <% menuItems.forEach(item => { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><strong><%= item.name %></strong></h5>
                            <!-- Displaying price with the rupee symbol -->
                            <h6 class="card-subtitle mb-2 text-muted">â‚¹<%= item.price %></h6>
                            <p class="card-text"><em><%= item.description %></em></p>
                            <small class="text-muted">Category: <%= item.category %></small>
                            <div class="mt-3">
                                <a href="/admin/dashboard/edit/<%= item._id %>" class="btn btn-warning btn-sm">Edit</a>
                                <form action="/admin/dashboard/delete/<%= item._id %>" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <p>RS Mani Cafe &copy; 2024 | Admin Panel</p>
    </footer>

    <!-- Bootstrap JS and Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
