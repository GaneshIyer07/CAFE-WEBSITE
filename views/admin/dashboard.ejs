<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        /* Card Layout Styling */
        .custom-col {
            flex: 0 0 20%; /* Each card takes up 20% of the row's width */
            max-width: 20%;
        }

        @media (max-width: 1200px) {
            .custom-col {
                flex: 0 0 25%; /* Four cards per row on medium screens */
                max-width: 25%;
            }
        }

        @media (max-width: 992px) {
            .custom-col {
                flex: 0 0 33.333%; /* Three cards per row on small screens */
                max-width: 33.333%;
            }
        }

        @media (max-width: 768px) {
            .custom-col {
                flex: 0 0 50%; /* Two cards per row on smaller devices */
                max-width: 50%;
            }
        }

        @media (max-width: 576px) {
            .custom-col {
                flex: 0 0 100%; /* One card per row on extra-small devices */
                max-width: 100%;
            }
        }

        /* Footer Styling */
        footer {
            background-color: #343a40;
            color: white;
            padding: 1rem;
        }   
    </style>
</head>
<body>
    <div class="container my-5">
        <h1 class="mb-4 text-center">Admin Dashboard - Menu Items</h1>

        <!-- Centered Buttons for Add New Menu, View User Checkouts, and Logout -->
        <div class="d-flex justify-content-center button-container mb-4">
            <a href="/admin/dashboard/add" class="btn btn-primary mx-2">Add New Menu Item</a>
            <a href="/admin/dashboard/checkout" class="btn btn-primary mx-2">View User Checkouts</a>
            <a href="/auth/logout" class="btn btn-danger mx-2">Logout</a>
        </div>

        <!-- Menu Items Card Layout -->
        <div class="row">
            <% menuItems.forEach(item => { %>
                <div class="col custom-col mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><strong><%= item.name %></strong></h5>
                            <h6 class="card-subtitle mb-2 text-muted">₹<%= item.price %></h6>
                            <p class="card-text"><em><%= item.description %></em></p>
                            <small class="text-muted">Category: <%= item.category %></small>
                            <div class="mt-3">
                                <a href="/admin/dashboard/edit/<%= item._id %>" class="btn btn-warning btn-sm">Edit</a>
                                <form action="/admin/dashboard/delete/<%= item._id %>" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <!-- Footer -->
    <footer class="text-center text-lg-start">
        <div class="container">
            <hr class="text-secondary">
            <div class="text-center">
                <p class="mb-0">© 2024 RS Mani Cafe. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS and Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
