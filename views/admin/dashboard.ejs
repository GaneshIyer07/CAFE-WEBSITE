<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        /* Your existing styles... */
    </style>
</head>
<body>
    <div class="container my-5">
        <h1 class="mb-4 text-center">Admin Dashboard - Menu Items</h1>

        <!-- Centered Buttons for Add New Menu, View User Checkouts, and Logout -->
        <div class="d-flex justify-content-center button-container mb-4">
            <a href="/admin/dashboard/add" class="btn btn-primary mx-2">Add New Menu Item</a>
            <a href="/admin/dashboard/checkout" class="btn btn-primary mx-2">View User Checkouts</a>
            <a href="/auth/logout" class="btn btn-danger mx-2">Logout</a>
        </div>

        <!-- Menu Items Card Layout -->
        <div class="row">
            <% menuItems.forEach(item => { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><strong><%= item.name %></strong></h5>
                            <h6 class="card-subtitle mb-2 text-muted">₹<%= item.price %></h6>
                            <p class="card-text"><em><%= item.description %></em></p>
                            <small class="text-muted">Category: <%= item.category %></small>
                            <div class="mt-3">
                                <a href="/admin/dashboard/edit/<%= item._id %>" class="btn btn-warning btn-sm">Edit</a>
                                <form action="/admin/dashboard/delete/<%= item._id %>" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <!-- Footer -->
    <footer>
<p>RS Mani Cafe &copy; 2024 | Admin Panel</p>
    </footer>

    <!-- Bootstrap JS and Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Fetch user checkouts
        fetch('/api/checkouts')
            .then(response => response.json())
            .then(checkouts => {
                const checkoutsContainer = document.getElementById('checkouts-container');
                checkouts.forEach(checkout => {
                    // Create a row for each checkout
                    const checkoutDiv = document.createElement('div');
                    checkoutDiv.classList.add('col-md-4', 'mb-4');

                    checkoutDiv.innerHTML = `
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Order #: ${checkout.orderNumber}</h5>
                                <p><strong>User:</strong> ${checkout.userId.username} (${checkout.userId.email})</p>
                                <p><strong>Total Amount:</strong> ₹${checkout.totalAmount}</p>
                                <p><strong>Delivery Address:</strong></p>
                                <p>${checkout.deliveryAddress.flatNo}, ${checkout.deliveryAddress.buildingNo}, ${checkout.deliveryAddress.buildingName}, ${checkout.deliveryAddress.nearby}, ${checkout.deliveryAddress.pincode}</p>
                                <p><strong>Phone No:</strong> ${checkout.deliveryAddress.phoneNo}</p>
                            </div>
                        </div>
                    `;
                    checkoutsContainer.appendChild(checkoutDiv);
                });
            })
            .catch(error => console.error('Error fetching checkouts:', error));
    </script>
</body>
</html>
