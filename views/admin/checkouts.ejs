<!-- views/admin/checkouts.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Checkouts</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container my-5">
        <h1 class="mb-4 text-center">User Checkouts</h1>

        <table class="table table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Order ID</th>
                    <th>User Name</th>
                    <th>User Email</th>
                    <th>User Address</th>
                    <th>Items</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% checkouts.forEach(checkout => { %>
                    <tr>
                        <td><%= checkout._id %></td>
                        <td><%= checkout.user.username%></td>
                        <td><%= checkout.user.email %></td>
                        <td><%= checkout.address %></td>
                        <td>
                            <ul>
                                <% checkout.items.forEach(item => { %>
                                    <li><%= item.itemId.name %> (Quantity: <%= item.quantity %>)</li>
                                <% }); %>
                            </ul>
                        </td>
                        <td><%= checkout.status || 'Pending' %></td>
                        <td>
                            <!-- You can add buttons here for further actions, e.g., update status -->
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
