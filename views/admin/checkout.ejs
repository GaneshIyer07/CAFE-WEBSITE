<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All User Checkouts</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(135deg, #0069d9, #ffdd57);
            color: white;
            margin: 0;
            padding-bottom: 20px;
        }
        .content {
            margin: 20px;
        }
        h1 {
            text-align: center;
            margin-bottom: 20px;
            font-size: 2.5rem;
        }
        .table-container {
            background: rgba(255, 255, 255, 0.2);
            border-radius: 10px;
            padding: 20px;
        }
        .table {
            color: white;
        }
        .table th, .table td {
            background-color: rgba(0, 0, 0, 0.1);
        }
        .alert-message {
            color: red;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="content">
        <h1>All User Checkouts</h1>
        <% if (error) { %>
            <p class="alert-message"><%= error %></p>
        <% } else if (checkouts.length > 0) { %>
            <div class="table-container">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Order No</th>
                            <th>User Name</th>
                            <th>Item Name</th>
                            <th>Qty</th>
                            <th>Total Price</th>
                            <th>Address</th>
                            <th>Time Stamp</th>
                            <th>Order Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% checkouts.forEach(checkout => { %>
                            <% checkout.items.forEach(item => { %>
                                <tr>
                                    <td><%= checkout.orderNumber %></td>
                                    <td><%= checkout.userId.username %></td>
                                    <td><%= item.itemName %></td>
                                    <td><%= item.quantity %></td>
                                    <td>â‚¹<%= checkout.totalAmount %></td>
                                    <td><%= checkout.deliveryAddress %></td>
                                    <td><%= new Date(checkout.createdAt).toLocaleString() %></td>
                                    <td>
                                        <select onchange="updateOrderStatus('<%= checkout._id %>', this.value)">
                                            <option value="Pending" <%= checkout.orderStatus === 'Pending' ? 'selected' : '' %>>Pending</option>
                                            <option value="Preparing" <%= checkout.orderStatus === 'Preparing' ? 'selected' : '' %>>Preparing</option>
                                            <option value="Out for Delivery" <%= checkout.orderStatus === 'Out for Delivery' ? 'selected' : '' %>>Out for Delivery</option>
                                            <option value="Delivered" <%= checkout.orderStatus === 'Delivered' ? 'selected' : '' %>>Delivered</option>
                                        </select>
                                    </td>
                                </tr>
                            <% }) %>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <p class="alert-message">No checkouts found.</p>
        <% } %>
    </div>

    <script>
        function updateOrderStatus(checkoutId, status) {
            fetch(`/admin/checkout/${checkoutId}/status`, {
                method: 'PATCH',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ orderStatus: status }),
            })
            .then(response => {
                if (response.ok) {
                    alert('Order status updated successfully!');
                    location.reload(); // Refresh to update the view
                } else {
                    alert('Failed to update status');
                }
            })
            .catch(err => {
                console.error("Error updating order status:", err);
                alert('Error updating order status. Please try again.');
            });
        }
    </script>
</body>
</html>
