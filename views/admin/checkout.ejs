<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - All Orders</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            height: 100vh;
            background: linear-gradient(135deg, #f3f4f5 50%, #ffdd57 50%);
        }

        .content {
            padding: 40px 20px;
            background-color: white;
            height: 100%;
            color: #333;
            overflow-y: auto;
        }

        h1 {
            text-align: center;
            font-size: 2.5rem;
            margin-bottom: 40px;
            color: #333;
        }

        .table-container {
            background-color: rgba(255, 255, 255, 0.9);
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        .table {
            background-color: white;
            color: #333;
        }

        .table th, .table td {
            background-color: #f8f9fa;
            vertical-align: middle;
        }

        .table th {
            color: #333;
        }

        .table td {
            color: #555;
        }

        .action-buttons {
            display: flex;
            gap: 5px;
        }

        .action-buttons button {
            background-color: #ffdd57;
            border: none;
            padding: 6px 12px;
            border-radius: 5px;
            cursor: pointer;
            color: #333;
        }

        .action-buttons button:hover {
            background-color: #e6c13e;
        }

        select {
            padding: 5px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        .no-orders {
            text-align: center;
            font-size: 1.2rem;
            color: #555;
        }

        .table-container th, .table-container td {
            text-align: center;
        }

        /* Navbar Styling */
        .navbar {
            background-color: #333;
        }

        .navbar a {
            color: white;
            font-size: 1.1rem;
            padding: 10px 15px;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

        .navbar a:hover {
            background-color: #ffdd57;
            color: #333;
        }

        .navbar .navbar-brand {
            font-size: 1.5rem;
            color: white;
            padding: 10px 20px;
        }

        .navbar .navbar-brand:hover {
            color: #ffdd57;
        }

        .navbar-nav {
            margin-left: auto;
        }

        .navbar-nav .nav-item {
            margin-left: 15px;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <a class="navbar-brand" href="/admin/dashboard">RS MANI Cafe - Admin</a>
        <div class="navbar-nav">
            <a class="nav-item nav-link" href="/admin/dashboard">Dashboard</a>
            <a class="nav-item nav-link" href="/auth/logout">Logout</a>
        </div>
    </nav>

    <div class="content">
        <h1>All Orders</h1>
        <% if (checkouts.length > 0) { %>
            <div class="table-container">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Order No</th>
                            <th>User Name</th>
                            <th>Item Name</th>
                            <th>Qty</th>
                            <th>Total Price</th>
                            <th>Address</th>
                            <th>Order Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% checkouts.forEach(checkout => { %>
                            <% checkout.items.forEach(item => { %>
                                <tr>
                                    <td><%= checkout.orderNumber %></td>
                                    <td><%= checkout.userId.username %></td>
                                    <td><%= item.itemId.name %></td>
                                    <td><%= item.quantity %></td>
                                    <td>â‚¹<%= checkout.totalAmount %></td>
                                    <td>
                                        <%= checkout.deliveryAddress.flatNo %>, 
                                        <%= checkout.deliveryAddress.buildingNo %>, 
                                        <%= checkout.deliveryAddress.buildingName %>, 
                                        <%= checkout.deliveryAddress.nearby %>, 
                                        <%= checkout.deliveryAddress.pincode %>
                                    </td>
                                    <td>
                                        <select onchange="updateOrderStatus('<%= checkout._id %>', this.value)">
                                            <option value="Pending" <%= checkout.orderStatus === 'Pending' ? 'selected' : '' %>>Pending</option>
                                            <option value="Preparing" <%= checkout.orderStatus === 'Preparing' ? 'selected' : '' %>>Preparing</option>
                                            <option value="Out for Delivery" <%= checkout.orderStatus === 'Out for Delivery' ? 'selected' : '' %>>Out for Delivery</option>
                                            <option value="Delivered" <%= checkout.orderStatus === 'Delivered' ? 'selected' : '' %>>Delivered</option>
                                        </select>
                                    </td>
                                    <td class="action-buttons">
                                        <button onclick="deleteOrder('<%= checkout._id %>')">Delete</button>
                                    </td>
                                </tr>
                            <% }) %>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <p class="no-orders">No orders found.</p>
        <% } %>
    </div>

    <script>
        function updateOrderStatus(checkoutId, status) {
            fetch(`/admin/dashboard/checkout/${checkoutId}/status`, {
                method: 'PATCH',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ orderStatus: status }),
            })
            .then(response => {
                if (response.ok) {
                    alert('Order status updated!');
                    location.reload();
                } else {
                    alert('Error updating order status');
                }
            });
        }

        function deleteOrder(checkoutId) {
            fetch(`/admin/dashboard/checkout/${checkoutId}/delete`, {
                method: 'DELETE',
            })
            .then(response => {
                if (response.ok) {
                    alert('Order deleted!');
                    location.reload();
                } else {
                    alert('Error deleting order');
                }
            });
        }
    </script>
</body>
</html>
